<% include ../partials/header %>
 
 <div class="container">
   <header class="jumbotron">
    <div class="container">
     <h1>Welcome in YelpCamp</h1>
     <p>Find All the best campgrounds all over the world</p>
     <p>
      <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new Campground</a>
     </p>
    </div>
   </header>
   
   <div class="row">
    <div class="col-lg-12">
     <h2>Most Popular Campgrounds</h2>
    </div>
   </div>
   
   <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% ngeCamp.forEach(function(camp){ %>
       <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
         <img src="<%= camp.image %>">
          <div class="caption">
           <h4><%= camp.name %></h4>
          </div>
          <p>
           <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View Details</a>
          </p>
        </div>
       </div>
    <% }); %>
   </div>
 </div>
 <% include ../partials/footer %>
 
 
 
 