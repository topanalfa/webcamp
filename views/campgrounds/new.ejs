<% include ../partials/header %>

    <div class="row">
        <h2 style="text-align: center;">Create a new Campgrounds</h2>
        
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price camp" min="10000" step="500">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Gn Salak, Bogor">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="your description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>